<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <!-- TextView para mostrar los puntos -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="@string/score"
        android:background="@color/black"
        android:textSize="24sp"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/healthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/scoreTextView"
        android:layout_margin="16dp"
        android:text="Vida: 3"
        android:background="@color/black"
        android:textSize="24sp"
        android:textColor="#FFFFFF" />
    <ImageView
        android:id="@+id/pauseButton"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Botón de pausa"
        android:src="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.7"
        android:scaleType="center"
        android:src="@drawable/baseline_arrow_left_24"
        android:text="Izquierda" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/btnLeft"
        android:alpha="0.7"
        android:scaleType="center"
        android:src="@drawable/baseline_arrow_right_24"
        android:text="Derecha" />

    <Button
        android:id="@+id/btnSpecialAttack"
        android:layout_width="148dp"
        android:layout_height="129dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/btnAttack"
        android:text="Ataque Especial" />

    <Button
        android:id="@+id/btnAttack"
        android:layout_width="148dp"
        android:layout_height="129dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Atacar" />

    <!-- ImageView para la animación del samurái -->
    <ImageView
        android:id="@+id/samuraiAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:visibility="gone" />
</RelativeLayout>